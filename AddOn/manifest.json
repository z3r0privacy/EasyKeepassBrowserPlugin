{
    "manifest_version": 2,
    "name": "EasyKeepassBrowserPlugin",
    "version": "0.2",
    "description": "A simple Plugin trying to automatically fill in your passwords",
    "author": "Michael Roth",
    "homepage_url": "https://github.com/z3r0privacy/EasyKeepassBrowserPlugin",
    "icons": {
        "16": "res/icon_closed_16.png",
        "32": "res/icon_closed_32.png",
        "48": "res/icon_closed_48.png",
        "128": "res/icon_closed_128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "js": ["shared/browser-polyfill.js", "shared/const.js", "shared/helper.js", "shared/base64js.min.js", "shared/security.js", "content/ekbp.js"]
        }
    ],
    "permissions": [
        "<all_urls>",
        "storage"
    ],
    "browser_action":{
        "default_icon": {
            "16": "res/icon_closed_16.png",
            "32": "res/icon_closed_32.png",
            "48": "res/icon_closed_48.png",
            "128": "res/icon_closed_128.png"
        },
        "default_title": "Easy Keepass Passwords",
        "default_popup": "popup/addonWindow.html"
    },
    "web_accessible_resources": [
        
    ],
    "background": {
        "scripts": ["shared/browser-polyfill.js", "shared/const.js", "shared/helper.js", "shared/base64js.min.js", "shared/security.js", "bg/background.js"]
    }
}